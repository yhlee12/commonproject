        .membership_Info_area {
            /*width: 100%;
            min-width: 320px;*/
            padding: 25px 0px;
        }
        .membership_Info {
            width: fit-content;
            padding: 5px 10px;

            margin: 0 auto;
            text-align: center;
            border: 1px solid #3B77FF;
