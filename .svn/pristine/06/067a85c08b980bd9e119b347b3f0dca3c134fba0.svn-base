            padding: 10px 0px;
            margin-bottom: 3%;
            cursor:pointer;
        }
        .join_Naver_Area {
            border-radius: 4px;
            text-align: center;
            padding: 10px 0px;
            border: 1px solid #E1E1E1;
            background:#ffffff;
            cursor:pointer;
        }
        .join_Kakao  {
            align-items: center;
            display: flex;
            margin: auto;
            width: 200px;
            justify-content: center;
            font-weight: 500;
        }
        .join_Naver {
            align-items: center;
            display: flex;
            margin: auto;
            width: 180px;
            justify-content: center;
            font-weight: 500;
        }

        .social_logo {
            width: fit-content;
            height: auto;
        }
        .join_Area {
            padding: 25px 0px;
        }
        .join_Btn {
            text-align: center;
            background: #343434 0% 0% no-repeat padding-box;
            border-radius: 4px;
            color: #D8D8D8;
            padding: 10px;
            font-weight: 500;
            cursor:pointer;
        }
        .join_Bottom_Area {
            width: 100%;
            min-width: 320px;
        }
        .join_Bottom {
            width: 216px;
            justify-content: space-between;

            margin: 0 auto;
            display: flex;
        }
        .join_Check {
            color: #707070;
        }
        .go_Login {
            line-height: 1.4;
            font-weight: 600;
            cursor:pointer;
        }
        /*메인 contnet*/
        .slider {
            width: 100%;
            overflow: hidden;
            position: relative;
        }

        .slider-container {
            display: flex;
            transition: transform 0.5s ease;
            padding: 2rem 0;
        }

        .slide {
            flex: 0 0 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .slide img {
            width: 100%;
            height: 100%;
            max-height: 100%;
            object-fit: cover;
        }

        .slider-controls {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 10px;
            right: 10px;
            display: flex;
            justify-content: space-between;
        }

        .slider-controls button {
            background: none;
            border: none;
            font-size: 4rem;
            color: #fff;
            cursor: pointer;
            padding: 5px;
        }
        /*hover*/
        .membership_Info:hover {
            color:#ffffff;
            background: #3B77FF;
        }
  
    </style>


       <script>
        $(document).ready(function () {
            $('.join_Btn').click(function () {
                location.href = "/Source/client/member/C_MEMBER_JOINGUIDE.aspx";
            });

            const prevBtn = $("#prevBtn");
            const nextBtn = $("#nextBtn");
            const slides = $(".slide");
            let currentSlide = 0;

            prevBtn.on("click", function () {
                currentSlide = (currentSlide - 1 + slides.length) % slides.length;
                updateSlide();
            });

            nextBtn.on("click", function () {
                currentSlide = (currentSlide + 1) % slides.length;
                updateSlide();
            });

            function updateSlide() {
                slides.each(function (index) {
                    if (index === currentSlide) {
                        $(this).css("display", "block");
                    } else {
                        $(this).css("display", "none");
                    }
                });
            }

            updateSlide();
        });

  </script>
</asp:Content>
