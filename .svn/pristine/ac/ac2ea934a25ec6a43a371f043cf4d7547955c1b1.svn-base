                var input_numbers = 0;
                var input_specials = 0;
                for (var i = 0; i < inputValue.length; i++) {
                    var char = inputValue.charAt(i);
                    if (/[a-zA-Z]/.test(char)) {
                        input_letters++; //영문
                    } else if (/[0-9]/.test(char)) {
                        input_numbers++; //숫자
