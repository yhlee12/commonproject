                format_date = '0' + $('#I_DATE').val();
                format_date.trim();
                $('#I_DATE').val(format_date);
                //유효 날짜 검사
                if ($('#I_YEAR').val().length == 4 && $('#I_MONTH').val().length >= 1) {
                    if ($('#I_MONTH').val().length == 1) {
                        format_month = '0' + $('#I_MONTH').val();
