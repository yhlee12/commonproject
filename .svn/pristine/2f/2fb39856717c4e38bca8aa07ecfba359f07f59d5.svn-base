<%@ Page Title="" Language="C#" MasterPageFile="~/Source/admin/master/Web.master" AutoEventWireup="true" CodeBehind="A_CUSTOMER_DETAIL.aspx.cs" Inherits="drKidAdmin.Source.admin.customer.A_CUSTOMER_DETAIL" %>
<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">
    <style>
        .title {
            padding: 20px 30px;
            border-bottom: 1px solid #dbdde2;
        }
        .content {
            padding: 20px 30px;
        }
        .user_detail_Title_Area {
            border: 3px solid #F3F3F3;
            padding: 10px 20px;
        }
        .baseInfo_Title_Area {
            padding: 20px 0px;
        }
        .baseInfo_List {
            border-top: 1px solid #262626;
        }
        .baseInfo {
            display: flex;
            align-items: center;
            border-bottom: 1px solid #CCCCCC;
        }
        .info_Area {
            width: 10%;
            background: #F3F3F3;
            padding: 15px;
        }
        .big_info_Area {
            height: 160px;
        }
        .data_Area {
            width: 90%;
            padding: 0px 15px;
        }
        .big_data_Area {
            display: grid;
            gap: 10px 0px;
            padding: 10px 15px;
        }
        .common_Input {
            width: 90%;
            border-radius: 4px;
        }
        .delivery_Btn {
            width:190px;
            height:40px;
            line-height:40px;
            text-align:center;
            background:#343434;
            color:#ffffff;
            border-radius: 4px;
            cursor:pointer;
            
        }
    </style>
</asp:Content>
