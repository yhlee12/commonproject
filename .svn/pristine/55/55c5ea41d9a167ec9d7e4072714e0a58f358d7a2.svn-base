    <style>
        html,body,form{
            width:100%;
            height:100%;
        }
        #wrap{
            width:100%;
            height:100%;
            min-width:1366px;
            min-height:768px;
            position:relative;
            overflow:auto;
        }
        #main-panel{
            width:100%;
            height:100%;
            box-sizing:border-box;
            padding-left:250px;
            background-color:var(--mono_back);
        }
        /*icon field*/
        #icon-field{
            width:100%;
            height:200px;
            position:relative;
            border-bottom:1px solid var(--mono_dea);
        }
        #icon-inner{
            top:50%;
            left:50%;
            position:absolute;
            transform:translate(-50%,-50%);
            max-width:90%;
        }
        .drkid-icon-admin{
            width:150px;
            margin:auto;
        }
        .drkid-icon-admin > img{
            width:100%;
            height:100%;
            object-fit:cover;
        }
        .go-client-home{
            margin-top:10px;
            width:185px;
            height:30px;
            line-height:28px;
            color:var(--mono_dea);
            border:1px solid var(--mono_dea);
            border-radius:30px;
            text-align:center;
            cursor:pointer;
        }
        /*search field*/
        #search-field{
            width:100%;
            height:220px;
            padding:20px 30px;
        }
        #search-field-inner{

        }
        /*left Panel*/
        #left-panel{
            width:250px;
            height:100%;
            background-color:var(--main_color);
            position:absolute;
            top:0;
            left:0;
        }
        /*Menu*/
        #menu-field{
            width:100%;
            height:calc(100% - 420px);
            background-color:var(--sub_color);
            padding-top:10px;
            overflow:auto;
        }
        .menu-main-ul{
            width:100%;
        }
        .menu-main-li{
            width:100%;
            box-sizing:border-box;
            background-color:var(--sub_color);
            cursor:pointer;
        }
        .menu-main-li > .menu-main-div{
            color:white;
            padding:19px 30px;
            position:relative;
            padding-right:calc(30px + 8px);
        }
        .menu-main-div > .menu-arrow-div{
            position:absolute;
            top:50%;
            right:38px;
            width:8px;
            height:8px;
            line-height:8px;
            transform:translate(0,-50%);
        }
        .menu-main-li > .menu-under-bar{
            width:85%;
            margin:auto;
            height:1px;
            background-color:var(--mono_dea);
            border:none;
        }
        .menu-sub-ul{
            width:100%;
            padding:10px 0;
            background-color:var(--main_color);
            display:none;
        }
        .menu-sub-ul > li{
            padding:8px 30px;
            color:var(--mono_dea);
        }
        /*Top*/
        #main-top{
            width:100%;
            height:85px;
            border-bottom:1px solid var(--mono_line);
            position:relative;
            display:flex;
            align-items:center;
            justify-content:flex-start;
        }
        .top-ring{
            width:30px;
            height:30px;
            padding:0 28px;
            box-sizing:content-box;
        }
        .top-ring > .top-ring-span{
            font-size:30px;
            text-align:center;
            color:var(--main_color);
            width:30px;
            height:30px;
        }
        .top-block{
            height:60px;
            border:1px solid var(--mono_line);
            padding:0 15px;
            background-color:white;
            border-radius:6px;
            margin-right:25px;
        }
        .top-block-inner{
            display:flex;
            justify-content:flex-start;
            align-items:center;
            height:100%;
        }
        .top-block-inner span{
            font-weight:600;
            cursor:pointer;
        }
        .frist-block{
            display:flex;
            justify-content:center;
            align-items:center;
            margin-right:15px;
        }
        .block-count{
            margin-left:8px;
        }
        .sub-block{
            height:calc(100% - 20px);
            border-radius:6px;
            border:1px solid var(--mono_line);
            background-color:var(--mono_back);
            padding:0 17px;
            display:flex;
            justify-content:flex-start;
            align-items:center;
        }
        .sub-inner-block{
            margin-left:15px;
        }
        .sub-inner-block:first-child{
            margin-left:0;
        }
        .sub-font-weight{
            font-weight:400 !important;
        }
    </style>
    <script>
        //javascript 구현이 가능하지만, 구현에 CSS등 복잡하므로 Jquery 사용하여 Drop Down 구현 KSM
        //추후 가능하다면 javascript로.
        $(function () {
            //Menu Ul target
            $('.menu-main-ul > .menu-main-li').each((index, item) => {
                let _li = $(item);
                let _target = _li.find('.menu-main-div');
                let _subUl = _li.find('.menu-sub-ul');
                let _arrow = _li.find('.menu-arrow-div');

                //Event binding
                _target.on('click', (e) => {
                    if (_subUl.hasClass('sub-active')) {
                        //이미 활성화 되어있는 것이므로 닫아야함.
                        _arrow.find('span').removeClass('up-arrow');
                        _arrow.find('span').addClass('down-arrow');
                        _subUl.removeClass('sub-active');
                        _subUl.slideUp(200);
                    } else {
                        _arrow.find('span').removeClass('down-arrow');
                        _arrow.find('span').addClass('up-arrow');
                        _subUl.addClass('sub-active');
                        _subUl.slideDown(200);
                    }
                });
            });
        });
    </script>
</head>
