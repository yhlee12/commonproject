<%@ Page Title="" Language="C#" MasterPageFile="~/Source/client/master/DRKID.Master" AutoEventWireup="true" CodeBehind="C_LOGIN_SEARCH_ID3.aspx.cs" Inherits="drKid.C_LOGIN_SEARCH_ID3" %>
<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">
    <style>
        #real_wrap{
            max-width: 1300px;
            margin: auto;
            padding:80px 0;
        }
        #wrap{
            text-align: center;
            max-width: 460px;
            margin: auto;
        }
        #title_wrap{
           margin-bottom: 80px;
           height:36px;
        }
        #textbox input:focus{
            border : 1px solid #115C5E;
            outline: none;
            transition: 0.2s;
        }

        #infotext{
            text-align: left;
            border-bottom: 2px solid #343434;
        }

    #infotext_content{
            padding-bottom:  16px ;
        }

        #textbox > input{
            width : 216px;
            height: 58px;
            border :  1px solid #E1E1E1;
            text-align: center;
        }

        #loginbutton{
            padding: 48px 0 16px 0 ;
        }

        button{
            background-color: #343434;
            width: 100%;
            height: 51px;
            border-radius: 4px;
            border: none;
            cursor:pointer;
        }

        a{color: #707070;
            text-decoration: none;}

          #find_wrap{
            width: 100%;
            text-align: center;
            padding-bottom: 32px;
        }

        #find{
            display: flex;
            justify-content: space-between;
        }

        #a1{
            color: #707070;
            padding: 0 9px;
        }

        #codecontent{
            text-align: center;
            padding: 48px 0 16px 0;
        }


        .login_title{
            display:block;
            line-height:36px;
        }
                /*강승우 폰트 설정*/
        .login_large_font{
            font-size: 36px;
        }

        .login_input_font{
            font-weight: 600;
            caret-color: #115C5E;
        }
         .login_info_font{
             font-size: 18px;
            font-weight: 600;   
            color : #575757;
        }
          .login_button_font{
            font-weight: 600;
            color: #D8D8D8;
        }

         input::placeholder{
            color: #E1E1E1;
            font-weight: 600;
        }
        /*강승우 폰트 설정*/

    </style>
    <script>
        $(function () {

            //엔터키 이벤트
            document.addEventListener("keydown", function (event) {
                if (event.key === "Enter") {
                    event.preventDefault(); // 기본 엔터 동작 방지

                    // 버튼 클릭 이벤트 발생
                    //var button1 = document.getElementById("findpwBtn"); 
                    var button2 = document.getElementsByClassName("findEnterkey");
                    //if (button1) {
                    //    button1.click();
                    //}
                    if (button2.length > 0) {
                        button2[0].click(); // 첫 번째로 일치하는 버튼 클릭
                        $(".drkid-btn-sub2").prop("class", "drkid-btn-sub2 findEnterkey");// 팝업창 엔터키 작동하도록 클래스이름 추가
                    }
                }
            });
        });
    </script>
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">
    <div id="real_wrap">
        <div id="wrap">
            <div id="title_wrap">
                <p class="login_title login_large_font">아이디 찾기</p>
            </div>
            <div id="infotext">
                <p id="infotext_content" class="login_info_font">아이디 찾기 완료</p>
            </div>
            <div>
                <div id="codecontent">
                    <p class="main_color lowerst-font">찾으시는 고객님의 아이디는 아래와 같습니다.</p>
                </div>
            </div>
            <div id="textbox">
                <input class="login_input_font" id="idtext" type="text" value="<%=sessionId %>" readonly=""/>
            </div>
            <div>
                <div id="loginbutton">
                    <button class="login_button_font findEnterkey" type="button" onclick="location.href='/Source/client/member/login/C_LOGIN_SearchPW1.aspx'">비밀번호 찾기 </button>
                </div>
            </div>
            <div id="find_wrap">
                <div id="find">
                    <div>
                        <a class="lowerst-font" href="/Source/client/member/login/C_LOGIN_SEARCH_PW1.aspx">비밀번호 찾기</a>

                    </div>
                    <div></div>
                    <div>

                        <a class="lowerst-font" href="#">로그인</a>
                        <span class="lowerst-font" id="a1">|   </span>
                        <a class="lowerst-font" href="#">회원가입</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</asp:Content>
