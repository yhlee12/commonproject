    <script>
        $(document).ready(function () {
            const updateCounter = function ($counter, max) {
                let currentValue = max;

                const handle = setInterval(function () {
                    $counter.text(Math.ceil(max - currentValue));

                    if (currentValue < 1) {
                        clearInterval(handle);
                    }

                    const step = currentValue / 10;
                    currentValue -= step;
                }, 50);
            }

            const $counterElement = $(".circle_chart_txt_percent > span:first-child");

            const targetNumber = 75;

            setTimeout(function () {
                updateCounter($counterElement, targetNumber);
            }, 100);
        });
    </script>
    
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            //그래프
            var chartArea = document.getElementById('myChart_donut').getContext('2d');
            var myChart = new Chart(chartArea, {
                // ①차트의 종류(String)
                type: 'doughnut',
                // ②차트의 데이터(Object)
                data: {
                    // ③x축에 들어갈 이름들(Array)
                    //labels: ['January','February','March','April','May','June'],
                    labels: [],
                    // ④실제 차트에 표시할 데이터들(Array), dataset객체들을 담고 있다.
                    datasets: [{
                        // ⑤dataset의 이름(String)
                        label: 'value',
                        // ⑥dataset값(Array)
                        data: [12, 19, 3, 5, 2, 3],
                        // ⑦dataset의 배경색(rgba값을 String으로 표현)
                        backgroundColor: [
                            //색상
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            //경계선 색상
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        // ⑨dataset의 선 두께(Number)
                        borderWidth: 1
                    }]
                },
                // ⑩차트의 설정(Object)
                options: {
                    title: {
                        display: false,
                        text: ['2023-2024', '판매량'],
                        fontSize: 15,
                        fontColor: ['black', 'gray']

                    },
                    // ⑪축에 관한 설정(Object)
                    scales: {
                        // ⑫y축에 대한 설정(Object)
                        y: {
                            // ⑬시작을 0부터 하게끔 설정(최소값이 0보다 크더라도)(boolean)
                            beginAtZero: true
                        }
                    }
                }
            });
            //주문/배송
            $(".Account_wrap > .Account_txt:first-child").click(function () {
                location.href = "/Source/m/my/M_M_MYPAGE_ORDER.aspx";
