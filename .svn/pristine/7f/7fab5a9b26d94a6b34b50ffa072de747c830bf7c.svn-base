        protected void Page_Load(object sender, EventArgs e)
        {
            this.basePageInit();
            
            flag = Request["flag"];
            modify_sid = Request["coupon_sid"];
            if (!IsPostBack)
            {
                cp_type_inquery();
                user_type_inquery();
                if (modify_sid != null)
                {
                    getCouponMaster();
                    getCouponAuth();
                }
            }
            else
            {
                cp_type_inquery();
                user_type_inquery();
                if (modify_sid != "") {
                    setRequest();
                    saveCoupon();
                    getCouponMaster();
                    getCouponAuth();
                    
                }
                else
                {
                    setRequest();
                    saveCoupon();
                }
                
            }
        }

        private void getCouponMaster()
        {
            bizHelper biz = new bizHelper();
            DataSet ds = null;
            string sql = @"
                            SELECT  *
                            FROM    TCM_COUPON_MASTER
                            WHERE   COUPON_SID = $modify_sid$
                            
