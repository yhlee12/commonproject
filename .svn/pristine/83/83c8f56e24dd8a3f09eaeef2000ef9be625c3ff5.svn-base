            font-weight: 700;
        }

        .myPage_txt {
            font-weight: bold;
        }

        .myPage_product_icon {
            text-align: center;
            display: flex;
            justify-content: center;
            /*visibility: hidden*/
        }

        .myPageHeader_top {
            display:flex;
            align-items:center;
            justify-content:space-between;
            padding: 0 15px 0.5rem;
            border-bottom: 2px solid var(--mono_line);
        }

        /*추가*/
        .best_wrap {
            padding:0;
            background-color: #fff;
            padding: 0 15px;
            /*border-bottom: 1px solid var(--mono_line);*/
        }

        .best_wrap_inner {
            text-align: center;
            font-weight: 500;
        }

        .Best_m_menu_wrap_inner {
            padding-left: 0;
            margin: 20px 0 15px;
            overflow-x: scroll;
        }

        .Best_m_menu_wrap_inner > ul {
            gap: 0.6rem;
            display:flex;
            justify-content: center;
        }
        .Best_m_menu_wrap_inner > ul > li {
            border: 1px solid var(--mono_line);
            color: var(--mono_point);
            padding: 3px 0.7rem;
            border-radius: 0px;
            font-weight: 300;
        }
        .reviewSearch {
            position: relative;
        }
        .reviewSearchBtn {
            position: absolute;
            top: 25%;
            right: 0;
            color: var(--mono_sub);
            display: flex;
            align-items: center;
            justify-content: center;
